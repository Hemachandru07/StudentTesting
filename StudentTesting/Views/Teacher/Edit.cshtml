@model StudentTesting.Models.Teachertbl

@{
    ViewData["Title"] = "Edit";
}


<h3 style="text-align:center">Edit Your Details Here</h3>

<div class="row row d-flex aligns-items-center justify-content-center">
    <div class="col-md-6 card p-3 px-5 py-5 mt-3 bg-light">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <img src="~/images/logo-removebg-preview.png" class="img-fluid mx-auto d-block" style="width:125px;height:100px;border-radius:35%;"alt="image">
            <h4 style="text-align:center;color:black">Edit Your Details</h4>
            <p></p>

            <input type="hidden" asp-for="FacultyId" />
            <div class="form-group">
                <label asp-for="FacultyName" class="control-label" style="color:black;font-size:20px"></label>
                <input asp-for="FacultyName" class="form-control" />
                <span asp-validation-for="FacultyName" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="Department" class="control-label" style="color:black;font-size:20px"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="Password" class="control-label" style="color:black;font-size:20px"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
