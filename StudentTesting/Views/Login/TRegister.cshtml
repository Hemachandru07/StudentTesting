@using Microsoft.AspNetCore.Http
@model StudentTesting.Models.Teachertbl
@inject IHttpContextAccessor HttpContextAccessor;

@{
    ViewData["Title"] = "TRegister";
    Layout = "CommonLayout";
}

@{
    ViewBag.StudentId = @HttpContextAccessor.HttpContext.Session.GetInt32("TeacherId");
}
@if (ViewBag.StudentId != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Registration Successful!</strong>
        <a id="manage" class="nav-link text-dark" asp-controller="Home" asp-action="Privacy" title="Manage">Your Unique Teacher ID is @ViewBag.TeacherId!</a>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="row row d-flex aligns-items-center justify-content-center">
    <div class="col-md-4 card p-3 px-5 py-5 mt-3 bg-light">
        <form asp-action="TRegister">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4 style="text-align:center">Teacher Register</h4>
            <div class="form-group">
                <label asp-for="FacultyName" class="control-label"></label>
                <input asp-for="FacultyName" class="form-control" />
                <span asp-validation-for="FacultyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPassword" class="control-label"></label>
                <input asp-for="CPassword" class="form-control" type="password"/>
                <span asp-validation-for="CPassword" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p></p>
<p></p>

<div style="text-align:center">
    <a class="btn btn-danger btn-outline-dark" asp-controller="Login" asp-action="TLogin" role="button">Teacher-Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
